<%= form_for(@contact, remote: true) do |f|%>
  <!-- Already an AJAX form -->
  <!-- Just need to receive the response in a function and display it in modal -->
  <div>
    <%= f.text_field :nickname, class: "hidden" %>
  </div>

  <div class="form-group">
    <%= f.text_field :name, class: "form-control", type: "text", placeholder: "Full Name" %>
  </div>
  
  <div class="form-group">
    <%= f.email_field :email, class: "form-control", type: "email", placeholder: "Email" %>
  </div>
  
  <div class="form-group">
    <%= f.text_field :subject, class: "form-control", type: "text", placeholder: "Subject" %>
  </div>

  <div class="form-group">
    <%= f.text_area :message, class: "form-control", type: "text", placeholder: "Message", rows: 8 %>
  </div>
  <!--   
  <div>
    <%= f.submit "Send" %>
  </div> -->
<% end %>